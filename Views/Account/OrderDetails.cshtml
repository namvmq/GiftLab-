@{
    Layout = "_Layout";
    ViewData["Title"] = "Chi tiết đơn hàng";
    var orderId = ViewData["OrderId"] ?? "1001";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Chi tiết đơn hàng #@orderId</h2>
                <a asp-controller="Account" asp-action="Orders" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
                </a>
            </div>

            <div class="row">
                <!-- Order Info -->
                <div class="col-lg-8">
                    <!-- Order Timeline -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Trạng thái đơn hàng</h5>
                        </div>
                        <div class="card-body">
                            <div class="timeline">
                                <div class="timeline-item completed">
                                    <div class="timeline-marker bg-success">
                                        <i class="bi bi-check"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Đặt hàng thành công</h6>
                                        <small class="text-muted">15/01/2025 10:30</small>
                                    </div>
                                </div>
                                <div class="timeline-item completed">
                                    <div class="timeline-marker bg-success">
                                        <i class="bi bi-check"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Đã xác nhận</h6>
                                        <small class="text-muted">15/01/2025 11:00</small>
                                    </div>
                                </div>
                                <div class="timeline-item completed">
                                    <div class="timeline-marker bg-success">
                                        <i class="bi bi-check"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Đang chuẩn bị hàng</h6>
                                        <small class="text-muted">15/01/2025 14:00</small>
                                    </div>
                                </div>
                                <div class="timeline-item active">
                                    <div class="timeline-marker bg-info">
                                        <i class="bi bi-truck"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Đang giao hàng</h6>
                                        <small class="text-muted">Dự kiến: 16/01/2025</small>
                                    </div>
                                </div>
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-light">
                                        <i class="bi bi-circle"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1 text-muted">Đã nhận hàng</h6>
                                        <small class="text-muted">Chưa hoàn thành</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Sản phẩm trong đơn</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                <img src="~/images/1.png" alt="Product" class="me-3" width="80" height="80" style="object-fit: cover; border-radius: 8px;">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Rocky Road Cupcake</h6>
                                    <small class="text-muted">Số lượng: 2</small>
                                </div>
                                <div class="text-end">
                                    <strong>₫70,000</strong>
                                </div>
                            </div>
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                <img src="~/images/11.png" alt="Product" class="me-3" width="80" height="80" style="object-fit: cover; border-radius: 8px;">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Melten Lava Cookie</h6>
                                    <small class="text-muted">Số lượng: 1</small>
                                </div>
                                <div class="text-end">
                                    <strong>₫25,000</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Thông tin đơn hàng</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless mb-0">
                                <tr>
                                    <td class="text-muted">Mã đơn:</td>
                                    <td class="text-end"><strong>#@orderId</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Ngày đặt:</td>
                                    <td class="text-end">15/01/2025</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Trạng thái:</td>
                                    <td class="text-end"><span class="badge bg-info">Đang giao</span></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="mb-0">Tổng thanh toán</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless mb-0">
                                <tr>
                                    <td class="text-muted">Tạm tính:</td>
                                    <td class="text-end">₫95,000</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Phí vận chuyển:</td>
                                    <td class="text-end">₫30,000</td>
                                </tr>
                                <tr class="border-top">
                                    <td><strong>Tổng cộng:</strong></td>
                                    <td class="text-end"><strong class="text-primary">₫125,000</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="mb-0">Thông tin nhận hàng</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-1"><strong>Nguyễn Văn A</strong></p>
                            <p class="mb-1 text-muted small">+84 123 456 789</p>
                            <p class="mb-0 text-muted small">123 Đường ABC, Quận XYZ, TP.HCM</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 30px;
    }

    .timeline-item:not(:last-child)::before {
        content: '';
        position: absolute;
        left: -25px;
        top: 30px;
        width: 2px;
        height: calc(100% - 10px);
        background: #dee2e6;
    }

    .timeline-item.completed:not(:last-child)::before {
        background: #198754;
    }

    .timeline-marker {
        position: absolute;
        left: -30px;
        top: 0;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
    }

    .timeline-item.active .timeline-marker {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            box-shadow: 0 0 0 0 rgba(13, 110, 253, 0.7);
        }
        50% {
            box-shadow: 0 0 0 10px rgba(13, 110, 253, 0);
        }
    }

    .timeline-content h6 {
        margin-bottom: 0.25rem;
    }
</style>

